<div class="navbar navbar-blue navbar-static-top">  
  <div class="navbar-header">
    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "F", root_path, class: "navbar-brand logo" %>
  </div>
  <nav class="collapse navbar-collapse" role="navigation">
    <%= form_tag "#", method: :get, class: "navbar-form navbar-left" do %>
      <div class="input-group input-group-sm" style="max-width:360px;">
        <%= text_field_tag "name", params[:name], class: "form-control",
          id: "search_user" %>
      </div>
    <% end %>
    <ul class="nav navbar-nav">
      <li>
        <%= link_to root_path do %>
          <i class="glyphicon glyphicon-home"></i> Home
        <% end %>
      </li>
      <li>
        <a href="#postModal" role="button" data-toggle="modal">
          <i class="glyphicon glyphicon-plus"></i> Post
        </a>
      </li>
      <li class="show_notification">
        <a href="#" data-toggle="dropdown">
          <i class="glyphicon glyphicon-globe"></i> 
          <% if @count_feedback && @count_feedback.count > 0 %>
            <b style="color:red" id="count_noti"> 
              <%= @count_feedback.count %>
              <%= hidden_field_tag :user_counted,
                @count_feedback.count, id: "user_countd_id" %>
            </b>
          <% end %>
          Notification
          <ul class="dropdown-menu">
            <% unless @list_feedback.blank? %>
              <% @list_feedback.each do |c| %>
                <li>
                  <%= link_to "#",
                    data: {toggle: "modal", target: "#modalapp_#{c.id}"},
                    class: "up_user_watch", id: "closemodal_#{c.id}" do %>
                    <span style="color:blue">
                      Admin acceptd -
                      <%= c.title %> 
                    </span>
                  <% end %>
                  <%= hidden_field_tag :ar_id, c.id, class: "ar_id" %>
                </li>
              <% end %>
            <% else %>
            <li>
              No Notification
            </li>
            <% end %>
          </ul>
        </a>
      </li>
      <li>
        <%= link_to list_article_care_path do %>
          <i class="glyphicon glyphicon-th-list"></i> Articles friend
        <% end %>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="glyphicon glyphicon-user"></i>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="glyphicon glyphicon-refresh"></i> Đổi mật khẩu
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i> Đăng xuất
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</div>
