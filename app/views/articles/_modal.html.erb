<% if @list_feedback %>
<% @list_feedback.each do |f| %>
  <div class="modal fade" id="modalapp_<%= f.id %>" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="panel panel-default" id="<%= f.id %>">
            <div class="panel-heading">
              <a href="#" class="pull-right">
                Time public: <%= f.public_time %>
              </a> 
              <h4 style="font-weight:bold;"><%= f.user.name %></h4>
            </div>
            <div class="panel-body">
              <p><code><%= f.title %></code></p>
              <center>
                <% if f.image? %>
                  <%= image_tag f.image.url, class: "img-responsive" %>
                <% end %>
              </center>
              <div class="clearfix"></div>
              <hr>
              <p>
                <%= f.content %>
              </p>
              <hr>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% end %>
