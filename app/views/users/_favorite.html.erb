<% @favorites.each do |f| %>
  <div class="modal fade" id="myModal_<%= f.article.id %>" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <div class="panel panel-default" id="<%= f.article.id %>">
            <div class="panel-heading">
              <a href="#" class="pull-right">
                <%= Time.at(Time.current.to_i - f.article.created_at.to_i).utc.strftime("%Hh%Mm") %> ago
              </a> 
              <h4 style="font-weight:bold;"><%= f.article.user.name %></h4>
            </div>
            <div class="panel-body">
              <p><code><%= f.article.title %></code></p>
              <center>
                <% if f.article.image? %>
                  <%= image_tag f.article.image.url, class: "img-responsive" %>
                <% end %>
              </center>
              <div class="clearfix"></div>
              <hr>
              <p>
                <%= f.article.content %>
              </p>
              <hr>
              <div class="input-group">
                <div class="input-group-btn">
                    <span class="btn btn-default" style="background-color:blue;color:white">
                      <i class="glyphicon glyphicon-thumbs-up"></i>
                    </span>
                    <span class="btn btn-default">
                      <i class="glyphicon glyphicon-thumbs-down"></i>
                    </span>
                  <span class="btn btn-default comment">
                    <i class="fa fa-comment-o"></i> Comment
                  </span>
                </div>
              </div>
              <br>
              <div>
                <span>
                  <%= f.article.likes.where(status: 1).count %> Likes, 
                  <%= f.article.likes.where(status: 0).count %> Unlikes, 
                  <%= f.article.comments.count %> comment
                </span>
              </div>
            </div>
            <div class="panel-footer" style="display:none" id="list_comment">
              <% f.article.comments.each do |comment| %>
                <div class="col-md-12" style="margin:5px">
                  <div class="col-md-4">
                    <% if comment.user.image? %>
                      <%= image_tag comment.user.image.url, style: "width: 50px; height: 50px;" %>
                    <% end %>
                  <%= comment.user.name %>
                  </div>
                  <div class="col-md-8">
                    <%= comment.content %>
                    <br><i><%= Time.at(Time.current.to_i - comment.created_at.to_i).utc.strftime("%Hh%Mm") %> ago</i>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
