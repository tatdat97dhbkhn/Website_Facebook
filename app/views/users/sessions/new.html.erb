<div class="container">
  <div class="omb_login">
    <h3 class="omb_authTitle">Login or 
      <%= link_to "Sign up", new_user_registration_path %>
    </h3>
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
      <div class="col-xs-4 col-sm-2">
        <%= link_to user_facebook_omniauth_authorize_path, 
          class: "btn btn-lg btn-block omb_btn-facebook" do %>
          <i class="fa fa-facebook visible-xs"></i>
          <span class="hidden-xs">Facebook</span>
        <% end %>
      </div>
      <div class="col-xs-4 col-sm-2">
        <a href="#" class="btn btn-lg btn-block omb_btn-twitter">
          <i class="fa fa-twitter visible-xs"></i>
          <span class="hidden-xs">Twitter</span>
        </a>
      </div>	
      <div class="col-xs-4 col-sm-2">
        <%= link_to user_google_oauth2_omniauth_authorize_path,
          class: "btn btn-lg btn-block omb_btn-google" do %>
            <i class="fa fa-google-plus visible-xs"></i>
            <span class="hidden-xs">Google+</span>
        <% end %>
      </div>	
    </div>
    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", object: f.object %> 
      <div class="row omb_row-sm-offset-3">
        <div class="col-xs-12 col-sm-6">	
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "Password", class: "form-control" %>
          </div>
          <span class="help-block"></span>                    
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "new-password",
              placeholder: "Password", class: "form-control" %>
          </div>
          <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
      <div class="row omb_row-sm-offset-3">
        <div class="col-xs-12 col-sm-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <div class="col-xs-12 col-sm-3">
          <p class="omb_forgotPwd">
            <%= link_to "Forgot password?", new_user_password_path %>
          </p>
        </div>
      </div>	    
    <% end %>	
  </div>
</div>
