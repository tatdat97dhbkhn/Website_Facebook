<div class="col-sm-12">
  <h4>Add articles:</h4>
  <div class="panel panel-default">
    <%= form_for @article, url: admin_articles_path do |f| %>
      <div class="panel-body form-horizontal payment-form">
        <%= render "admin/shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :title, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_area :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
              <%= f.text_area :content, class: "form-control", rows: 5%>
          </div>
        </div> 
        <div class="form-group">
          <%= f.label :image, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.file_field :image,
              accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
          </div>
        </div> 
        <div class="form-group">
          <%= f.label :public_time, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.datetime_local_field :public_time, class: "form-control" %>
            </div>
        </div>   
        <div class="form-group">
          <div class="col-sm-12 text-right">
            <%= f.submit :submit, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>   
  </div>   
</div>

